<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.muffindreamers.rous">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/front"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.MapRatDataActivity"
            android:label="@string/title_activity_fetch_rat_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.DetailedRatScreen"
            android:label="@string/title_activity_detailed_rat_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.FetchRatDataActivity"
            android:label="FetchFatData"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.AddNewRatData"
            android:label="@string/title_activity_add_new_rat_data"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBo3B7q6OJi7lDnx2F47IH7fG2wum3iGmw" />

        <activity
            android:name=".controllers.GraphRatData"
            android:label="@string/title_activity_graph_rat_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.AdminPanel"
            android:label="@string/title_activity_admin_panel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controllers.GraphRatData2"></activity>
    </application>

</manifest>